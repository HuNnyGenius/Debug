<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgjpg"
    android:padding="10dp"
    tools:context="unikl.hunnygenius.debug.Login">

    <LinearLayout
        android:paddingTop="70dp"
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="8dp">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Amore Login"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_gravity="center"
         android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/userET"
        android:layout_width="300dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteY="119dp"
        android:hint="Username"
        android:layout_gravity="center"
        android:background="@drawable/edittextstyle"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#fff"
        android:layout_marginTop="10dp"
        />

     <EditText
        android:id="@+id/pwdET"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="numberPassword"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#fff"
         />

        <TextView
            android:id="@+id/forgotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Forgot Password?"
            android:onClick="forgotBtn"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonstyleselector"
            android:text="Login"
            android:onClick="LoginBtn"
            android:textColor="#fff" />

        <Button
            android:id="@+id/regBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#fa8072"
            android:text="REGISTER"
            android:onClick="RegBtn"
            android:textColor="#fff" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
